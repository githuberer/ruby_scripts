#!/usr/bin/env ruby
#require 'stringex'

if ARGV.empty?
  puts <<-EOF
  \n Usage Example :    #{$0} title \n
  EOF
  exit
end

title = ARGV.shift
time = Time.new


categories = %w[
  sciencefiction
  mypoints
  myjournals
  ruby
  sql
  linuxshell
  linuxsystem
  others
]


puts "\n\nPlease type in category numbers:\n"
 (0...categories.length).each do |e|
  puts "#{e}, #{categories[e]}"
end
puts "\nExample: 0 1 3\n\n"

nums = gets().split("\s")

categories_new = []
nums.each do |e| 
  en = e.to_i
  categories_new << categories[en]
  #categories_new << categories[en].to_url if categories[en] =~ /\p{Han}+/
end

content = <<-EOF
---
layout: post
title: #{title}
date: #{time.strftime "%Y-%m-%d %H:%M:%S"} +0800
categories: [ #{categories_new.join(', ')} ]
---
\n\n\n
EOF
postfile = "#{time.strftime '%Y-%m-%d'}-#{title.scan(/[a-zA-Z0-9\p{Han}]+/).join("-")}.markdown"

File.open(postfile, 'w') { |f| f.write(content) }



